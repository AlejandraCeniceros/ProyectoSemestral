        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView x:Name="lstCosas" HorizontalAlignment="Left" Height="297" Margin="22,25,0,0" VerticalAlignment="Top" Width="204" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding=  "{Binding Titulo}" Header="Pelicula" Width="120"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding=  "{Binding Ano}" Header="Año" Width="80"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="BtnOrdenar1" Content="Ordenar A-Z" HorizontalAlignment="Left" Margin="34,336,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="BtnOrdenar2" Content="Ordenar Z-A" HorizontalAlignment="Left" Margin="34,374,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="151,336,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="151,374,0,0" VerticalAlignment="Top" Width="75"/>

       


        <Button Content="Agregar" HorizontalAlignment="Left" Margin="246,25,0,0" VerticalAlignment="Top" Width="75"/>
        <Grid HorizontalAlignment="Left" Height="334" Margin="246,50,0,0" VerticalAlignment="Top" Width="536"/>

       


        <Button Content="Agregar" HorizontalAlignment="Left" Margin="616,389,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="696,389,0,0" VerticalAlignment="Top" Width="75"/>
       
        
        
        
        
        
        <Image  x:Name="Star1" Margin="262,307,471,63" Source="star.png" Stretch="Fill"/>
        <Image  x:Name="Star2" Margin="321,307,412,63" Source="star.png" Stretch="Fill"/>
        <Image  x:Name="Star3" Margin="380,307,353,63" Source="star.png" Stretch="Fill"/>
        <Image  x:Name="Star4" Margin="439,307,294,63" Source="star.png" Stretch="Fill"/>
        <Image  x:Name="Star5" Margin="498,307,235,63" Source="star.png" Stretch="Fill"/>
    </Grid>
</Window>
